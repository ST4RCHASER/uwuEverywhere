{
  "manifest_version": 3,

  "name": "uwuEverywhere",
  "description": "Change many sites to uwu mode",
  "version": "1.0",

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
      {
          "matches": ["<all_urls>"],
          "js": ["js/vendor.js", "js/content_script.js"]
      }
  ],

  "background": {
    "service_worker": "js/background.js"
  },

  "permissions": [
    "storage",
    "management",
    "declarativeNetRequest",
    "unlimitedStorage"
  ],

  "host_permissions": [
    "http://*/*",
    "https://*/*"
  ]
}
